<head>
    <link rel="stylesheet" href="~/css/FunStuff.css" asp-append-version="true" />


</head>

@model UI.Models.PluklistModelSingleton

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-center">

    <h1>Lav ny plukliste</h1>
</div>

@if (!Model.Validate())
{
    <button class="btn btn-primary">
        <a style="color: white !important;  text-decoration: none;" asp-action="CreatePluklist">Create New</a>
    </button>
}

else
{
    
       <a asp-action="Save" class="btn btn-primary ">Save and upload</a>

    <br />
    <h2>Info</h2>
    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shipping)
                </th>
                <th></th>
            </tr>
        </thead>
        <thead>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Shipping)
                </td>
                <td>
                    @Html.ActionLink("Rediger", "EditPluklist", new {})
                </td>
            </tr>
        </thead>
    </table>
    <h2>Produkter</h2>
    <table class="table">
        <thead>

            <tr>
                <th>
                    ProductId
                </th>
                <th>
                    Beskrivelse
                </th>
                <th>
                    Type
                </th>
                <th>
                    Antal
                </th>
                <td>
                    @Html.ActionLink("Tilføj produkt", "AddPluklistLine", new {pluklist = Model })
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => line.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => line.Title)
                    </td>

                    @if (line.Type == 0)
                    {
                        <td>
                            Fysisk
                        </td>

                    }
                    else
                    {
                        <td>
                            Print
                        </td>
                    })

                    <td>
                        @Html.DisplayFor(modelItem => line.Amount)
                    </td>

                    <td>
                        @Html.ActionLink("Rediger", "EditPluklistLine", line.HasChanced =true)
                        <a asp-action="DeletePluklistLine">Delete</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>

}
